
public class RevisaoMetodos {
	public static void main(String[] args) {
		int num = 4 ;
		
		System.out.println("o proximo numero e "+ proximo(4)+ "e seu dobro e :" + dobroProximo(4));
		System.out.println("o dobro do proximo numero e :" + dobroProximo(4));
		
	}
	
	public static int  proximo(int num) {
		int resultado  = num +1;
		return resultado;
//		System.out.println("o proximo numero e "+ proximo);
		
		
	}
	
	public static int dobroProximo(int num) {
	/*return  (num + 1) * 2;*/
		return proximo(num) * 2;
	}
	

}
